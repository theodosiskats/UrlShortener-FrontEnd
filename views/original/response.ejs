<%- include('../partials/header') %>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <p class="display-5">Original -> Short</p>
            <label for="url" class="form-label">Your shortened url is ready</label>
            <input type="text" id="url" class="form-control" aria-labelledby="urlHelpBlock" value="<%=result%>">
            <div id="urlHelpBlock" class="form-text">
                Either pass it at the end of the website following the original <br> Auto-Redirect URL: <strong><%=MY_URL%><%=result%></strong>
            </div>
            <div class="mt-3">
                <a href="/" target="_self"><button type="submit" class="btn btn-primary">Return</button></a>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
